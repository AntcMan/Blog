<section class="mx-auto md:w-1/2 mb-20">
  <div class="blogs mb-6 px-10 pb-20 md:justify-center">
    <% @blog_posts.each do |blog_post| %>
      <div class="blog-card py-2 md:flex mb-4">
        <div class="cover-image pb-3 w-full md:w-32 lg:w-48 md:mr-6 relative">
          <%= link_to cl_image_tag(blog_post.cover_image.key, class: "rounded-sm w-full md:max-w-none object-cover object-center shadow-[rgba(0,_0,_0,_0.32)_0px_3px_8px]"),
              blog_post if blog_post.cover_image.present? %>
        </div>
        <div class="card-content w-3/4 md:ml-0">
          <h3>
            <%= link_to blog_post.title, blog_post, class: "text-lime-900 no-underline text-lg md:text-2xl font-thin uppercase font-sans hover:text-yellow-900 transition duration-300" %>
          </h3>
          <p class="font-light text-xs italic pt-1 pb-2">published: <%= time_ago_in_words(blog_post.created_at) %>
            ago
          </p>
          <div class="font-thin font-sans text-medium hidden md:block md:pb-2">
            <%= truncate(blog_post.content.to_plain_text, length: 100, omission: '...') %>
          </div>
          <%= link_to "read more >", blog_post_path(blog_post), class: "font-sans font-bold text-xs hover:text-yellow-900 transition duration-300" %>
        </div>
      </div>
    <% end %>
  </div>
</section>

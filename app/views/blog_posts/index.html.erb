<section class="mx-auto md:w-2/4">
  <div class="blogs mb-6 px-10 pb-20 flex flex-wrap md:justify-center">
    <% @blog_posts.each do |blog_post| %>
      <div>
        <h3><%= link_to blog_post.title, blog_post, class: "text-lime-800 no-underline font-semibold text-2xl font-thin uppercase font-serif hover:text-yellow-900 transition duration-300 hover:underline" %></h3>
        <p class="font-light text-xs italic pt-1 pb-4">published: <%= time_ago_in_words(blog_post.created_at) %></p>
          <div class="pb-10 font-thin font-sans text-medium">
            <%= truncate(blog_post.content.to_plain_text, length: 140, omission: '...') %>
            <%= link_to "Read more", blog_post_path(blog_post), class: "font-sans font-medium hover:text-yellow-900 hover:underline transition duration-300" %>
          </div>
      </div>
    <% end %>
  </div>
</section>
